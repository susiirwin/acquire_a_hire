<div class="container">
  <div class="well">
    <h1>Log In To Your Account</h1>

    <%= form_for(:authorization, url: api_oauth_authorize_path(@authorize_params), :html => {:class => "form-horizontal center"} ) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="form-group">
      <%= f.label :password, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.password_field :password %>
        </div>
      </div>
      <%= f.submit "Login", id: "login-button", class: "btn btn-acquire" %>
    <% end %>
  </div>
</div>
